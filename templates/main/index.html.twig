{% extends 'base.html.twig' %}

{% block stylesheets %}{{ parent() }}<style>.btn-primary {
            background-color: #00cc00; 
            color: #fff;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #009900; 
        }
           h2 {
            font-size: 24px;
            color: #333;
            font-weight: bold;
            margin-bottom: 10px;
        }
        h3 {
            font-style: italic;
        }</style>{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Site e-commerce</h1>
            <p>Bienvenue dans notre boutique</p>            
        </div>
        {% for category in categories %}
            {% if category.parent == null %}
                <div class="col-12 mt-4">
                    <h2>{{ category.name }}</h2>
                </div>
            {% else %}
                <div class="col-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title">{{ category.name }}</h3>
                            <a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
                        </div>
                    </div>
                </div>    
            {% endif %}
        {% endfor %}
    </section>
</main>
{% endblock %}
