{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie {{ category.name }}{% endblock %}

{% block body %}

    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{ category.name }}</h1>
            </div>
            {% for productss in productss.data %}
            <div class="col-3 mb-3">
            
            <article class="card h-100">
            <img src="{{asset('assets/uploads/products/mini/300x300-' ~ productss.images[0].name)}}" class="card-img-top" alt="{{productss.name}}"/>
            <div class="card-body">
            <h2 class="card-title">{{productss.name}}</h2>
            <p class="card-text">{{productss.description}}</p>
            <a href="{{path('products_details',{"slug":productss.slug})}}" class="btn btn-primary"> Voir les details</a>
            </div>
            </article>
            </div>


            {% endfor %}
            </section>
            {% set path = 'categories_list' %}
            {% set slug = category.slug %}
            {% set pages = productss.pages %}
            {% set currentPage = productss.page %}
            {% include "_partials/_pagination.html.twig" %}
            
        
    </main>
{% endblock %}